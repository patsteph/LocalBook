{
  "name": "localbook-extension",
  "displayName": "LocalBook Companion",
  "version": "1.0.5",
  "description": "Your research companion - capture, summarize, and explore web content with LocalBook",
  "scripts": {
    "dev": "plasmo dev --no-open",
    "clean": "rm -rf build .plasmo",
    "build": "rm -rf build/LocalBook-Extension && plasmo build && mv build/chrome-mv3-prod build/LocalBook-Extension",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.268",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "autoprefixer": "10.4.16",
    "postcss": "8.4.32",
    "svgo": "^3.3.2",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "scripting",
      "contextMenus",
      "notifications",
      "sidePanel"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }
}
